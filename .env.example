# Example Environment Configuration
# Copy this file to .env.local and update the values for your local development

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=MyLifeApp
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Auth Configuration
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Theme Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_THEME_PERSISTENCE=true

# Development specific (uncomment and customize for your setup)
# VITE_API_URL=https://your-dev-api.com/api
# VITE_ENABLE_MOCK_API=true
# VITE_DEBUG_MODE=true